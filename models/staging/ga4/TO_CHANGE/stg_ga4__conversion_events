-- MAY ELIMINATE HERE AND MOVE TO DOWNSTREAM --

WITH add_conversion_events AS (

    SELECT
        event_key,
        
        STRUCT(
            {% for conversion_event in var('conversion_events') -%}

            IF(event_name = '{{ conversion_event }}', 1, 0) AS is_{{ conversion_event }}
        
            {{- "," if not loop.last }}
            {% endfor %}
        ) AS conversion_events
    FROM
        {{ ref('stg_ga4__events') }}

)

SELECT * FROM add_conversion_events
